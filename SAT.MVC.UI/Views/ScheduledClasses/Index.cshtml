@model IEnumerable<SAT.MVC.DATA.EF.ScheduledClass>

@{
    ViewBag.Title = "Course Schedule";
}

<h2><br />@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstructorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cours.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledClassStatus.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InstructorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cours.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledClassStatus.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ScheduledClassID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ScheduledClassID }) |
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.ScheduledClassID })

            }
        </td>
    </tr>
}

</table>
