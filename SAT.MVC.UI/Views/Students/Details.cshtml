@model SAT.MVC.DATA.EF.Student

@{
    ViewBag.Title = "Student Details";
}

<h2><br />@Html.DisplayFor(model => model.FullName)</h2>

<div>
    <hr />


    <div id="headerLeft">
        <p>
            <strong>Status:</strong>
            @Html.DisplayFor(model => model.StudentStatus.StatusName)
        </p>
        <p>
            <strong>Major:</strong>
            @Html.DisplayFor(model => model.Major)
        </p>
        <p>
            <strong>Scholarship:</strong>
            @Html.DisplayFor(model => model.HasScholarship)
        </p>
        <p>
            <strong>Email:</strong>
            @Html.DisplayFor(model => model.Email)
        </p>
        <p>
            <strong>Phone Number:</strong>
            @Html.DisplayFor(model => model.StudentPhone)
        </p>
        <p>
            <strong>Date of Birth:</strong>
            @Html.DisplayFor(model => model.DOB)
        </p>
        <p>
            <strong>Address:</strong>
            @Html.DisplayFor(model => model.Address) <br />
            <strong>City:</strong>
            @Html.DisplayFor(model => model.City) <br />
            <strong>State:</strong>
            @Html.DisplayFor(model => model.State)<br />
            <strong>Zip Code:</strong>
            @Html.DisplayFor(model => model.Zip)
        </p>
        <p>
            <strong>Emergency Contact:</strong>
            @Html.DisplayFor(model => model.EmergencyContact)<br />
            <strong>Contact Number:</strong>
            @Html.DisplayFor(model => model.EmergencyPhone)
        </p>


    </div>

    <div id="headerRight">
        <img src="~/Content/images/@Model.StudentImage" alt="@Model.FullName" title="@Model.FullName" style="border:1px solid black;" class="studentImage"/>

    </div>
    <div class="clearfix"></div>

    <div id="viewContent">

    </div>
            
            
    
            
        
           
           

</div>

@if (User.IsInRole("Admin"))
{
<p id="headerRight">
    <br />
    @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
    }
