@model SAT.MVC.DATA.EF.Student

@{
    ViewBag.Title = "Delete Student";
}

<h2><br />@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div id="headerLeft">
        <p>
            @Html.DisplayFor(model => model.FullName)
        </p>
        <p>
            @Html.DisplayFor(model => model.DOB)
        </p>
        <p>
            @Html.DisplayFor(model => model.Address) <br />
            @Html.DisplayFor(model => model.City) <br />
            @Html.DisplayFor(model => model.State)<br />
            @Html.DisplayFor(model => model.Zip)
        </p>
    </div>

    <div id="headerRight">
        <p>
            <img src="~/Content/images/@Model.StudentImage" title="@Model.FullName" alt="Default Image" /> <br />
            <br />
        </p>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />  
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
